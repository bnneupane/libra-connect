<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Notification History | Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .table-hover tbody tr:hover {
      background-color: #f1f1f1;
    }
    .badge {
      font-size: 0.85rem;
    }
  </style>
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-dark px-3">
    <a class="navbar-brand" href="/admin/dashboard">ðŸ“Š Admin Panel</a>
    <a href="/auth/logout" class="btn btn-outline-light">Logout</a>
  </nav>

  <!-- Main Content -->
  <div class="container mt-5">
    <h3 class="text-center mb-4">ðŸ“¢ Notification History</h3>

    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Sent To</th>
            <th>Message</th>
            <th>Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% if (notifications.length > 0) { %>
            <% notifications.forEach((note, idx) => { %>
              <tr>
                <td><%= idx + 1 %></td>
                <td><%= note.user %></td>
                <td><%= note.message %></td>
                <td><%= new Date(note.date).toLocaleString() %></td>
                <td>
                  <% if (note.seen) { %>
                    <span class="badge bg-success">Seen</span>
                  <% } else { %>
                    <span class="badge bg-warning text-dark">Unseen</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center text-muted">No notifications found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="text-center mt-4">
      <a href="/admin/dashboard" class="btn btn-secondary">â¬… Back to Dashboard</a>
    </div>
  </div>

</body>
</html>

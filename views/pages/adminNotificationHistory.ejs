<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Notifications</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .table-hover tbody tr:hover {
      background-color: #f1f1f1;
    }
  </style>
</head>
<body class="bg-light">

  <!-- Navigation -->
  <nav class="navbar navbar-dark bg-dark px-3">
    <a class="navbar-brand" href="/admin/dashboard">ðŸ“Š Admin Panel</a>
    <a href="/auth/logout" class="btn btn-outline-light">Logout</a>
  </nav>

  <!-- Main Content -->
  <div class="container mt-5">
    <h3 class="text-center mb-4">ðŸ“¬ Notification History (Sent)</h3>

    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Message</th>
            <th>Sent On</th>
          </tr>
        </thead>
        <tbody>
          <% if (notifications.length === 0) { %>
            <tr>
              <td colspan="3" class="text-center text-muted">No notifications found.</td>
            </tr>
          <% } else { %>
            <% notifications.forEach((n, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= n.message %></td>
                <td><%= new Date(n.date).toLocaleString() %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="text-center mt-4">
      <a href="/admin/dashboard" class="btn btn-secondary">â¬… Back to Dashboard</a>
    </div>
  </div>

</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bookmarked Books | Libra Connect</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .card-img-top {
      height: 250px;
      object-fit: contain;
      padding: 10px;
      background-color: #f8f8f8;
    }
    
    .empty-msg {
      font-size: 1.1rem;
      color: #777;
      margin-top: 2rem;
    }
  </style>
</head>
<body class="bg-light">

<!-- âœ… SweetAlert Flash -->
<% if (typeof flash !== 'undefined' && flash) { %>
  <script>
    Swal.fire({
      icon: '<%= flash.type %>',
      title: '<%= flash.msg %>',
      confirmButtonText: 'OK'
    });
  </script>
<% } %>

<!-- ðŸ” Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/books/dashboard">ðŸ“š Libra Connect</a>
    <div class="d-flex align-items-center">
      <a href="/profile/notifications" class="btn btn-light position-relative me-3">
        ðŸ””
        <% const unseenCount = user.notifications.filter(n => !n.seen).length; %>
        <% if (unseenCount > 0) { %>
          <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            <%= unseenCount %>
          </span>
        <% } %>
      </a>
      <a href="/profile" class="btn btn-light me-2">ðŸ‘¤ Profile</a>
      <a href="/auth/logout" class="btn btn-outline-light">Logout</a>
    </div>
  </div>
</nav>

<!-- ðŸ“š Bookmarked Books -->
<div class="container mt-5">
  <h3 class="text-center mb-4">ðŸ”– Your Bookmarked Books</h3>

  <div class="row">
    <% if (user.bookmarks.length > 0) { %>
      <% user.bookmarks.forEach(book => { %>
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card h-100 shadow-sm">
            <img src="<%= book.imageURL %>" class="card-img-top" alt="Cover of <%= book.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="mb-0 text-muted"><%= book.author %></p>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center">
        <p class="empty-msg">You haven't bookmarked any books yet!</p>
      </div>
    <% } %>
  </div>

  <div class="text-center mt-4">
    <a href="/books/dashboard" class="btn btn-secondary">ðŸ”™ Back to Dashboard</a>
  </div>
</div>

</body>
</html>

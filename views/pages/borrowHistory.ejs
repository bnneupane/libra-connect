<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Borrow History | Libra Connect</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .badge {
      font-size: 0.85rem;
    }
    .table td, .table th {
      vertical-align: middle;
    }
  </style>
</head>
<body class="bg-light">

<!-- âœ… Flash Message -->
<% if (typeof flash !== 'undefined' && flash) { %>
  <script>
    Swal.fire({
      icon: '<%= flash.type %>',
      title: '<%= flash.msg %>',
      confirmButtonText: 'OK'
    });
  </script>
<% } %>

<!-- ðŸ” Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/books/dashboard">ðŸ“š Libra Connect</a>
    <div class="d-flex align-items-center">
      <!-- ðŸ”” Notifications -->
      <a href="/profile/notifications" class="btn btn-light position-relative me-3">
        ðŸ””
        <% const unseenCount = user.notifications.filter(n => !n.seen).length; %>
        <% if (unseenCount > 0) { %>
          <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            <%= unseenCount %>
          </span>
        <% } %>
      </a>
      <a href="/profile" class="btn btn-light me-2">ðŸ‘¤ Profile</a>
      <a href="/auth/logout" class="btn btn-outline-light">Logout</a>
    </div>
  </div>
</nav>

<!-- ðŸ“‹ Borrow History -->
<div class="container mt-5">
  <h3 class="text-center mb-4">ðŸ“‹ Your Borrow History</h3>

  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-primary">
        <tr>
          <th>#</th>
          <th>Book Title</th>
          <th>Borrowed On</th>
          <th>Returned On</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% if (user.borrowedBooks.length > 0) { %>
          <% user.borrowedBooks.forEach((borrow, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= borrow.bookId ? borrow.bookId.title : 'Deleted Book' %></td>
              <td><%= borrow.borrowDate.toDateString() %></td>
              <td><%= borrow.returnDate ? borrow.returnDate.toDateString() : '-' %></td>
              <td>
                <% if (!borrow.returnDate) { %>
                  <span class="badge bg-warning text-dark">Active</span>
                <% } else { %>
                  <span class="badge bg-success">Returned</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center text-muted">You haven't borrowed any books yet!</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <div class="text-center mt-4">
    <a href="/books/dashboard" class="btn btn-secondary">ðŸ”™ Back to Dashboard</a>
  </div>
</div>

</body>
</html>
